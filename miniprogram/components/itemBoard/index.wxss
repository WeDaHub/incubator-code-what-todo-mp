.create-board-container .block {
  margin: 40rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}
.create-board-container .block .title {
  font-size: 30rpx;
  color: #333;
}
.create-board-container .field-input,
.create-board-container .remark-textarea {
  padding: 20rpx 0;
  font-size: 28rpx;
}
.create-board-container .field-input.disabled,
.create-board-container .remark-textarea.disabled {
  color: #999;
}
.create-board-container .board {
  width: 80%;
  height: 72vh;
  border-radius: 8rpx;
  background: #fff;
  padding: 40rpx 40rpx;
  color: #333;
  position: relative;
  overflow: hidden;
}
.create-board-container .board .board-box {
  height: calc(100% - 50px);
  overflow-y: auto;
  overflow-x: hidden;
}
.create-board-container .board .board-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.create-board-container .board .close {
  color: #999;
}
.create-board-container .board .h-title {
  font-size: 40rpx;
  font-weight: 500;
}
.create-board-container .board .desc .desc-title {
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.create-board-container .board .remark .remark-textarea {
  margin-top: 28rpx;
  height: 120rpx;
}
.create-board-container .board .operate-btn {
  position: absolute;
  width: 90%;
  left: 5%;
  bottom: 4%;
}
.create-board-container .level-radio-container {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.create-board-container .level-radio-container .level {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
  height: 40rpx;
  box-sizing: border-box;
}
.create-board-container .level-radio-container .level.active .circle {
  border: 1px solid #676767;
}
.create-board-container .level-radio-container .level.active .text {
  font-weight: bold;
}
.create-board-container .level-radio-container .level .circle {
  width: 32rpx;
  height: 32rpx;
  border-radius: 32rpx;
  box-sizing: border-box;
}
.create-board-container .level-radio-container .level .text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: var(--inactive-color);
}
.create-board-container .level-radio-container .level.l-0 .circle {
  background-color: var(--level-0-color);
}
.create-board-container .level-radio-container .level.l-1 .text {
  color: var(--level-1-color);
}
.create-board-container .level-radio-container .level.l-1 .circle {
  background-color: var(--level-1-color);
}
.create-board-container .level-radio-container .level.l-2 .text {
  color: var(--level-2-color);
}
.create-board-container .level-radio-container .level.l-2 .circle {
  background-color: var(--level-2-color);
}
.create-board-container .level-radio-container .level.l-3 .text {
  color: var(--level-3-color);
}
.create-board-container .level-radio-container .level.l-3 .circle {
  background-color: var(--level-3-color);
}
